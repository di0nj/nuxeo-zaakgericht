<?xml version="1.0"?>
<component name="com.capgemini.nuxeo.zaakgericht.typeservice.types">
 
    <extension target="org.nuxeo.ecm.platform.types.TypeService" point="types">
 
        <type id="CaseRoot">
            <label>CaseRoot</label>
            <description>CaseRoot.description</description>
            <icon>icons/folder.gif</icon>
            <bigIcon>icons/folder_100.png</bigIcon>
            <category>CaseManagement</category>
            <default-view>view_documents</default-view>
            <subtypes>
                <type>Case</type>
            </subtypes>
            <layouts mode="any">
                <layout>heading</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
                <layout>dublincore</layout>
            </layouts>
            <contentViews category="content">
                <contentView>document_content</contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">
                    document_trash_content
                </contentView>
            </contentViews>
        </type>
    
        <type id="Case">
            <label>Case</label>
            <description>Case.description</description>
            <icon>icons/folder.gif</icon>
            <bigIcon>icons/folder_100.png</bigIcon>
            <category>CaseManagement</category>
            <default-view>view_documents</default-view>
            <layouts mode="any">
                <layout>heading</layout>
            </layouts>
            <layouts mode="edit">
                <layout>heading</layout>
                <layout>dublincore</layout>
            </layouts>
            <contentViews category="content">
                <contentView>document_content</contentView>
            </contentViews>
            <contentViews category="trash_content">
                <contentView showInExportView="false">
                    document_trash_content
                </contentView>
            </contentViews>
        </type>
    
        <!-- We would like to create a CaseRoot under Domain -->
        <type id="Domain">
            <subtypes>
                <type>CaseRoot</type>
            </subtypes>
        </type>
    
        <!-- For testing purposes we allow creation under Workspaces -->
        <type id="Workspace">
            <subtypes>
                <type>CaseRoot</type>
            </subtypes>
        </type>
 
    </extension>
 
</component>